{
    "extends": [
      "airbnb", 
      "plugin:react/recommended", 
      "plugin:react/jsx-runtime", 
      "eslint:recommended",
      "prettier"],
    "plugins": ["react", "jest", "prettier"],
    "rules": {
      "prettier/prettier": ["warn",  {
        "endOfLine": "auto", 
        "tabWidth": 2,
        "quoteProps": "as-needed",
        "singleQuote": true,
        "printWidth": 120,
        "semi": true,
        "useTabs": false,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "jsxSingleQuote": true
        }],

      "import/prefer-default-export": "off",
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-process-exit": "off",
      "object-shorthand": "off",
      "class-methods-use-this": "off",
      "ignoreComments": "off"
    },
    "parserOptions": {
        "ecmaFeatures": {
          "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jest/globals": true,
      "es2021": true
    }
}
